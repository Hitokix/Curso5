<div class="col s6">
    <div class="card">
        <div class="card-image">
            <img src="{{image}}">
            <div class="card-title">
                <span class="text-title">
                    {{title}}
                </span>
            </div>
        </div>
        <div class="card-content">
            {{content}}
        </div>
        <div class="card-action">
            <a href="#">{{action}}</a>
        </div>
    </div>
</div>